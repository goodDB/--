    <!-- 图片区域划分 -->
    <view class="img">

      <view style="  display: flex;flex-direction: row;margin-top:5px">
        <view wx:for="{{list00}}" style="margin: 0px 10px 0px 10px" >
          <image src="{{item.img}}"
          style="width: 85px;height:85px;border-radius: 2px;border:1px solid #F4F6FA; position: relative; float: left;" bindtap="btnImg0" id="img0{{index}}"></image>
          <image src="../../images/4.png" style="height:19px;width:19px; margin-top:-4px;margin-left:-15px; position: relative; float: left;" id="img00{{index}}" bindtap="btnIcon0"></image>
        </view>
      </view>

      <view style="  display: flex;flex-direction: row;margin-top:5px">
        <view wx:for="{{list01}}" style="margin: 0px 10px 0px 10px">
