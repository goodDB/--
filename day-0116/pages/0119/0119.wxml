          <image src="{{item.img}}"
          style="width: 85px;height:85px;border-radius: 2px;border:1px solid #F4F6FA; position: relative; float: left;" id="img1{{index}}" bindtap="btnImg0"></image>
          <image src="../../images/4.png" style="height:19px;width:19px; margin-top:-4px;margin-left:-15px; position: relative; float: left;" id="img01{{index}}" bindtap="btnIcon0"></image>
        </view>
      </view>
      <view style="  display: flex;flex-direction: row;margin-top:5px">
