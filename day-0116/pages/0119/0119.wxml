        style="width: 85px;height:85px;border-radius: 2px;border:1px solid #F4F6FA;margin:0px 8px;margin-top:15px;" bindtap="addList00">
      </image>
    </view>
    <text>19/3000</text>
  </view>

  <!-- 第二块 -->
  <view class="hr"></view>
  <view class="views1" style="height:{{height2 + 'px'}};width:{{width3}}">
    <view style="margin:5px;font-size:15px">选项</view>
    <view style="margin-top:15px;"></view>
    <view style="margin:auto;">

      <view class="span" wx:if="{{A}}">
        <view class="iconText">A</view>
        <view class="inputIcon">
          <view class="inputView">
            <input type="text"
              style="width: 254px;height: 46px;border: 1px solid #E0E0E0;margin:auto;border:#ffffff solid 1px;margin-left:10px"
              placeholder="  输入这个选项，一张图片" />
            <image src="../../images/1.png" class="inpIcon"></image>
          </view>
        </view>
        <image src="../../images/3.png" class="imgIcon" bindtap="delBtn" id="0"></image>
      </view>

      <view class="span" wx:if="{{B}}">
        <view class="iconText">B</view>
        <view class="inputIcon">
          <view class="inputView">
            <input type="text" style="width: 254px;height: 46px;background: #FBFBFB;margin:auto;margin-left:10px"
              placeholder="  这是内容" />
            <image src="../../images/1.png" class="inpIcon"></image>
          </view>
        </view>
        <image src="../../images/3.png" class="imgIcon" bindtap="delBtn" id="1"></image>
      </view>

      <view class="span" wx:if="{{C}}">
        <view class="iconText">C</view>
        <view class="inputIcon">
          <view class="inputView">
            <textarea type="text"
              style="width: 254px;height: 68px;font-size: 15px;font-family: PingFangSC-Regular, PingFang SC;font-weight: 400;color: #333333;line-height: 23px;margin-right:19px;margin-left:10px;margin-top:10px;"
              placeholder="输入这个选项，有很多文字可以回行输入这个选项，有很多字可">
            </textarea>
            <image src="../../images/1.png" class="inpIcon"></image>
          </view>
        </view>
        <image src="../../images/3.png" class="imgIcon" bindtap="delBtn" id="2"></image>
      </view>
    </view>

    <view class="span" wx:if="{{D}}">
      <view class="iconText">D</view>
      <view class="inputIcon">
        <view class="inputView">
          <input type="text" style="width: 254px;height: 46px;background: #FBFBFB;margin:auto;margin-left:10px"
            placeholder="  内容" />
          <image src="../../images/1.png" class="inpIcon"></image>
        </view>
      </view>
      <image src="../../images/3.png" class="imgIcon" bindtap="delBtn" id="3"></image>
    </view>

    <view style="display:flex;flex-direction:row;margin-left:60px;margin-top:20px">
